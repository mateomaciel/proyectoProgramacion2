
<%if(locals.user){%> 
	<%- include('./partials/headlogueado') %>
<%}else{%>
	<%- include('./partials/head')%>   
<%}%>

	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner-fifa-21-home.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades </h2>
			</div>

			<% for(let i=0; 4>i; i++){ %>
		    <div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/detalleProducto/<%= ProdDESC[i].id %>">
						<figure class="product-box_image">
							<img src="/images/juegos/<%= ProdDESC[i].urlImg %>" alt="Juego" class="imgproduct">
						</figure>
						<article class="product-box_data">
							<h2 class= "product-title"><%= ProdDESC[i].nombreJuego %></h2>
							<p><%= ProdDESC[i].resumen %></p>
							<p>Comentarios: <%= ProdDESC[i].comments.length %></p>
							<p>Puntaje: <%= ProdDESC[i].puntaje%></p></a>
							<a href="/otrosPerfil/<%= ProdDESC[i].users.id %>"><p>Agregado por: <%=ProdDESC[i].users.username %></p></a>
						</article>
				</section>
			</div> 
		    <% } %>
			
		</div>
	</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mejor puntuados</h2>
			</div>
			<% for(let i=0; i<4; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/detalleProducto/<%=ProdPUNT[i].id%>">
						<figure class="product-box_image">
							<img src="/images/juegos/<%= ProdPUNT[i].urlImg %>" alt="Juego" class="imgproduct">
						</figure>
						<article class="product-box_data">
							<h2 class= "product-title"><%=ProdPUNT[i].nombreJuego%></h2>
							<p><%=ProdPUNT[i].resumen%></p>
							<p>Comentarios: <%= ProdPUNT[i].comments.length %></p>
							<p>Puntaje: <%=ProdPUNT[i].puntaje%></p></a>
							<a href="/otrosPerfil/<%= ProdPUNT[i].users.id %>"><p>Agregado por: <%=ProdPUNT[i].users.username%></p></a>
						</article>
				</section>
			</div>
			<%}%>
		</div>
	</div>


	<%- include('./partials/footer') %> 