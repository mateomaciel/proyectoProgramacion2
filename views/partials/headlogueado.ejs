<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/formularios.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/iniciarSesion.css">

    <title> GamePause </title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<div class="container-header">
			<div class="row align-items-center">
				<div class="col-5 col-md-2" id="logo">
					<a href="/" class="main-header_home-link">
						<img src="../images/Logo.jpeg">
					</a>
				</div>
	
				<div class="col-7 col-md-5">
					<form action="/resultados" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos por nombre o descripción" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-5">
					<ul class="right-navbar">
						<li>
							<a href="/miPerfil" class="a-link" style="color: #1CA6D4;">
								<%= locals.user.username %> <i class="fas fa-user"></i>
							</a>
						</li>
			            <li>
							<form action="/iniciarSesion/salir" method="POST" style="margin-bottom: 0px">
								<button class="logout" type="submit"  style="color: #1CA6D4;">
									Cerrar sesión <i class="fas fa-sign-in-alt"></i>
								</button>
							</form>
	
						</li>
						<li><a href="/todosProductos" class="a-link" style="color: #1CA6D4;">Todos los productos</a></li>
					</ul>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
		</div>
	</header>